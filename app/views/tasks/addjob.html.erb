<h1>Task #<%= h(@task.id) %>, <%= h(@task.name) %><br/>
  from Pipeline #<%= h(@pipeline.id) %> <%= h(@pipeline.name) %> </h1>

<%= form_tag pipeline_task_path(@pipeline,@task), :method => :delete do %>
 <%= link_to 'Edit',  edit_pipeline_task_path(@pipeline, @task) %>
 <%= link_to 'Tasks',  pipeline_tasks_path(@pipeline) %>
 <%= link_to 'Masks',  task_masks_path(@task) %>
 <button type="submit" onclick="return confirm('Are you sure you want to delete?')" >Delete</button>
<% end %>

 <table border="0">
   <tr><td><label for="task_name">Name:</label></td><td>
       <%= @task.name %></td></tr>

   <tr><td><label for="task_flags">Flags:</label></td><td>
      <%= @task.flags %></td></tr>

   <tr><td><label for="configuratino">Config:</label></td><td>
      <%= @configuration.name %></td></tr>


 </table>
